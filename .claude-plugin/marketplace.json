{
  "name": "open-platform-marketplace",
  "owner": {
    "name": "开放平台",
    "email": "mingxuan@minimax.com"
  },
  "metadata": {
    "description": "开放平台插件市场",
    "version": "1.0.0",
    "pluginRoot": "./plugins"
  },
  "plugins": [
    {
      "name": "grafana-log-viewer",
      "source": "./plugins/grafana-log-viewer",
      "description": "通过MCP查看Grafana日志",
      "version": "1.0.0",
      "author": {
        "name": "开放平台部门"
      },
      "category": "monitoring",
      "tags": ["grafana", "logs", "mcp"],
      "mcpServers": {
        "debug": {
          "command": "uvx",
          "type": "stdio",
          "enable": true,
          "args": [
            "--from",
            "git+https://gitlab.xaminim.com/matrix/debug-mcp.git@dev",
            "debug-mcp"
          ]
        }
      }
    }
  ]
}